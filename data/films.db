// oke
create table films (
    id int primary key auto_increment,
    budget long,
    original_language varchar(20),
    description varchar(1000),
    popularity float,
    avatar varchar(100),
    trailer varchar(100),
    release_date date,
    revenue long,
    title varchar(100),
    vote_average float,
    vote_count int,
    length int,
    like_num int,
    created_at datetime,
    updated_at datetime
);

// oke
create table genres (
    id int primary key auto_increment,
    name varchar(50)
);

// oke
create table companies (
    id int primary key auto_increment,
    name varchar(100)
);

// oke
create table countries (
    id int primary key auto_increment,
    name varchar(100)
);

// oke
create table companies_films (
    id int primary key auto_increment,
