);

// oke
create table actors (
    id int auto_increment primary key,
    birthday date,
    deathday date,
    name varchar(50),
    gender int,
    biography varchar(500),
    popularity float,
    place_of_birth varchar(100),
    profile_path varchar(200)
);

// oke
create table actors_films (
    id int auto_increment primary key,
    film_id int,
    actor_id int,
    character_name varchar(100)
);